<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="register_form" name="Register Form" inherit_id="b2b_registration.register">
        <xpath expr="//div[@name='register_button']" position="replace">
            <span class="hidden" data-for="register_form"/>
            <div id="register_section">
                <section class="s_website_form" data-vcss="001" data-snippet="s_website_form">
                    <div class="container">
                        <form id="contactus_form" action="/b2b_registration/" method="post"
                              enctype="multipart/form-data"
                              class="o_mark_required" data-mark="*" data-model_name="mail.mail"
                              data-success-mode="redirect" data-success-page="/contactus-thank-you">
                            <div class="s_website_form_rows row s_col_no_bgcolor">
                                <div class="form-group col-12 s_website_form_field s_website_form_custom"
                                     data-type="char"
                                     data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px"
                                               for="company_name">
                                            <span class="s_website_form_label_content">company name</span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="company_name" type="text"
                                                   class="form-control s_website_form_input"
                                                   name="company_name"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_field s_website_form_custom"
                                     data-type="char"
                                     data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px"
                                               for="vat">
                                            <span class="s_website_form_label_content">Vat Number</span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="vat" type="text" class="form-control s_website_form_input"
                                                   name="vat"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_field s_website_form_custom"
                                     data-type="char"
                                     data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px"
                                               for="fiscal_code">
                                            <span class="s_website_form_label_content">Fiscal code</span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="fiscal_code" type="text"
                                                   class="form-control s_website_form_input"
                                                   name="fiscal_code"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_field s_website_form_custom"
                                     data-type="char"
                                     data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px"
                                               for="email">
                                            <span class="s_website_form_label_content">E-mail</span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="email" type="text" class="form-control s_website_form_input"
                                                   name="email"/>
                                        </div>
                                    </div>
                                </div>


                                <div class="form-group col-12 s_website_form_field s_website_form_custom"
                                     data-type="char"
                                     data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px"
                                               for="phone">
                                            <span class="s_website_form_label_content">E-Telephone Number</span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="phone" type="text" class="form-control s_website_form_input"
                                                   name="phone"/>
                                        </div>
                                    </div>
                                </div>


                                <div class="form-group col-12 s_website_form_field s_website_form_custom"
                                     data-type="char"
                                     data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px"
                                               for="city">
                                            <span class="s_website_form_label_content">City</span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="city" type="text" class="form-control s_website_form_input"
                                                   name="city"/>
                                        </div>
                                    </div>
                                </div>


                                <div class="form-group col-12 s_website_form_field s_website_form_custom"
                                     data-type="char"
                                     data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px"
                                               for="zip">
                                            <span class="s_website_form_label_content">CAP/ZIP</span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="zip" type="text" class="form-control s_website_form_input"
                                                   name="zip"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_field s_website_form_custom"
                                     data-type="char"
                                     data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px"
                                               for="street">
                                            <span class="s_website_form_label_content">Address</span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="street" type="text" class="form-control s_website_form_input"
                                                   name="street"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_field s_website_form_custom"
                                     data-type="char"
                                     data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px"
                                               for="country_id">
                                            <span class="s_website_form_label_content">Nation</span>
                                        </label>
                                        <div class="col-sm">
                                            <select name="country_id" class="form-control">
                                                <option value="">Select</option>
                                                <t t-foreach="countries or []" t-as="country">
                                                    <option t-att-value="country.id">
                                                        <t t-esc="country.name"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_field s_website_form_custom"
                                     data-type="char"
                                     data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px"
                                               for="industry_id">
                                            <span class="s_website_form_label_content">Sector</span>
                                        </label>
                                        <div class="col-sm">
                                            <select name="industry_id" class="form-control">
                                                <option value="">Select</option>
                                                <t t-foreach="industries or []" t-as="industry">
                                                    <option t-att-value="industry.id">
                                                        <t t-esc="industry.name"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_field s_website_form_custom"
                                     data-type="char"
                                     data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px"
                                               for="pec">
                                            <span class="s_website_form_label_content">PEC Electronic Invoicing (only in
                                                Italy)
                                            </span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="pec" type="text" class="form-control s_website_form_input"
                                                   name="pec"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_field s_website_form_custom"
                                     data-type="char"
                                     data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px"
                                               for="sdi">
                                            <span class="s_website_form_label_content">SDI Electronic Invoicing (only in
                                                Italy)
                                            </span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="sdi" type="text" class="form-control s_website_form_input"
                                                   name="sdi"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_field s_website_form_custom"
                                     data-type="char"
                                     data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px"
                                               for="is_company">
                                            <span class="s_website_form_label_content">is company?</span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="is_company" type="checkbox"
                                                   class="form-control s_website_form_input"
                                                   name="is_company"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_submit" data-name="Submit Button">
                                    <div style="width: 200px;" class="s_website_form_label"/>
                                    <a href="#" role="button" class="btn btn-primary btn-lg s_website_form_send">
                                        Submit
                                    </a>
                                    <span id="s_website_form_result"></span>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </xpath>
    </template>
</odoo>
