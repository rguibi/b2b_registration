                                                            <div class="form-group col-12 s_website_form_field s_website_form_custom"
                                                                 data-type="char"
                                                                 data-name="Field">
                                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                                    <label class="col-form-label col-sm-auto s_website_form_label"
                                                                           style="width: 200px"
                                                                           for="country_id">
                                                                        <span class="s_website_form_label_content">
                                                                            Nation
                                                                        </span>
                                                                    </label>
                                                                    <div class="col-sm">
                                                                        <select name="country_id" class="form-control">
                                                                            <option value="">Select</option>
                                                                            <t t-foreach="countries or []"
                                                                               t-as="country">
                                                                                <option t-att-value="country.id">
                                                                                    <t t-esc="country.name"/>
                                                                                </option>
                                                                            </t>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="form-group col-12 s_website_form_field s_website_form_custom"
                                                                 data-type="char"
                                                                 data-name="Field">
                                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                                    <label class="col-form-label col-sm-auto s_website_form_label"
                                                                           style="width: 200px"
                                                                           for="industry_id">
                                                                        <span class="s_website_form_label_content">
                                                                            Sector
                                                                        </span>
                                                                    </label>
                                                                    <div class="col-sm">
                                                                        <select name="industry_id" class="form-control">
                                                                            <option value="">Select</option>
                                                                            <t t-foreach="industries or []"
                                                                               t-as="industry">
                                                                                <option t-att-value="industry.id">
                                                                                    <t t-esc="industry.name"/>
                                                                                </option>
                                                                            </t>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="form-group col-12 s_website_form_field s_website_form_custom"
                                                                 data-type="char"
                                                                 data-name="Field">
                                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                                    <label class="col-form-label col-sm-auto s_website_form_label"
                                                                           style="width: 200px"
                                                                           for="pec">
                                                                        <span class="s_website_form_label_content">PEC
                                                                            Electronic Invoicing (only in
                                                                            Italy)
                                                                        </span>
                                                                    </label>
                                                                    <div class="col-sm">
                                                                        <input id="pec" type="text"
                                                                               class="form-control s_website_form_input"
                                                                               name="pec"/>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="form-group col-12 s_website_form_field s_website_form_custom"
                                                                 data-type="char"
                                                                 data-name="Field">
                                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                                    <label class="col-form-label col-sm-auto s_website_form_label"
                                                                           style="width: 200px"
