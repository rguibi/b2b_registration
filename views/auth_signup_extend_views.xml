<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="auth_signup_fields_extend" inherit_id="auth_signup.fields" name="Signup Fields Extend">
            <xpath expr="//div[hasclass('field-password')]" position="replace">
                <field name="password" invisible="1"/>
            </xpath>
            <xpath expr="//div[hasclass('field-login')]" position="replace">
                <field name="login" invisible="1"/>
            </xpath>

            <xpath expr="//div[hasclass('field-name')]" position="replace">

                <div class="form-group col-12 s_website_form_field s_website_form_custom" data-type="char"
                     data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                               for="name">
                            <span class="s_website_form_label_content">Name</span>
                        </label>
                        <div class="col-sm">
                            <input id="name" type="text" class="form-control s_website_form_input"
                                   name="name"/>
                        </div>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[hasclass('field-confirm_password')]" position="replace">
                <div class="form-group col-12 s_website_form_field s_website_form_custom" data-type="char"
                     data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                               for="company_name">
                            <span class="s_website_form_label_content">company name</span>
                        </label>
                        <div class="col-sm">
                            <input id="company_name" type="text" class="form-control s_website_form_input"
                                   name="company_name"/>
                        </div>
                    </div>
                </div>

                <div class="form-group col-12 s_website_form_field s_website_form_custom" data-type="char"
                     data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                               for="vat">
                            <span class="s_website_form_label_content">Vat Number</span>
                        </label>
                        <div class="col-sm">
                            <input id="vat" type="text" class="form-control s_website_form_input"
                                   name="vat"/>
                        </div>
                    </div>
                </div>

                <div class="form-group col-12 s_website_form_field s_website_form_custom" data-type="char"
                     data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                               for="fiscal_code">
                            <span class="s_website_form_label_content">Fiscal code</span>
                        </label>
                        <div class="col-sm">
                            <input id="fiscal_code" type="text" class="form-control s_website_form_input"
                                   name="fiscal_code"/>
                        </div>
                    </div>
                </div>

                <div class="form-group col-12 s_website_form_field s_website_form_custom" data-type="char"
                     data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                               for="email">
                            <span class="s_website_form_label_content">E-mail</span>
                        </label>
                        <div class="col-sm">
                            <input id="email" type="text" class="form-control s_website_form_input"
                                   name="email"/>
                        </div>
                    </div>
                </div>


                <div class="form-group col-12 s_website_form_field s_website_form_custom" data-type="char"
                     data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                               for="phone">
                            <span class="s_website_form_label_content">E-Telephone Number</span>
                        </label>
                        <div class="col-sm">
                            <input id="phone" type="text" class="form-control s_website_form_input"
                                   name="phone"/>
                        </div>
                    </div>
                </div>


                <div class="form-group col-12 s_website_form_field s_website_form_custom" data-type="char"
                     data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                               for="city">
                            <span class="s_website_form_label_content">City</span>
                        </label>
                        <div class="col-sm">
                            <input id="city" type="text" class="form-control s_website_form_input"
                                   name="city"/>
                        </div>
                    </div>
                </div>


                <div class="form-group col-12 s_website_form_field s_website_form_custom" data-type="char"
                     data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                               for="zip">
                            <span class="s_website_form_label_content">CAP/ZIP</span>
                        </label>
                        <div class="col-sm">
                            <input id="zip" type="text" class="form-control s_website_form_input"
                                   name="zip"/>
                        </div>
                    </div>
                </div>

                <div class="form-group col-12 s_website_form_field s_website_form_custom" data-type="char"
                     data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                               for="street">
                            <span class="s_website_form_label_content">Address</span>
                        </label>
                        <div class="col-sm">
                            <input id="street" type="text" class="form-control s_website_form_input"
                                   name="street"/>
                        </div>
                    </div>
                </div>

                <div class="form-group col-12 s_website_form_field s_website_form_custom" data-type="char"
                     data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                               for="country_id">
                            <span class="s_website_form_label_content">Nation</span>
                        </label>
                        <div class="col-sm">
                            <select name="country_id" class="form-control">
                                <option value="">Select</option>
                                <t t-foreach="countries or []" t-as="country">
                                    <option t-att-value="country.id">
                                        <t t-esc="country.name"/>
                                    </option>
                                </t>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="form-group col-12 s_website_form_field s_website_form_custom" data-type="char"
                     data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                               for="industry_id">
                            <span class="s_website_form_label_content">Sector</span>
                        </label>
                        <div class="col-sm">
                            <select name="industry_id" class="form-control">
                                <option value="">Select</option>
                                <t t-foreach="industries or []" t-as="industry">
                                    <option t-att-value="industry.id">
                                        <t t-esc="industry.name"/>
                                    </option>
                                </t>
                            </select>
                        </div>
                    </div>
                </div>


