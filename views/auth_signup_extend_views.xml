                <!--                                <t t-esc="industry.name"/>-->
                <!--                            </option>-->
                <!--                        </t>-->
                <!--                    </select>-->
                <!--                </div>-->

                <div class="form-group col-12 s_website_form_field s_website_form_custom" data-type="char"
                     data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                               for="pec">
                            <span class="s_website_form_label_content">PEC Electronic Invoicing (only in Italy)</span>
                        </label>
                        <div class="col-sm">
                            <input id="pec" type="text" class="form-control s_website_form_input"
                                   name="pec"/>
                        </div>
                    </div>
                </div>


                <div class="form-group col-12 s_website_form_field s_website_form_custom" data-type="char"
                     data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                               for="sdi">
                            <span class="s_website_form_label_content">SDI Electronic Invoicing (only in Italy)</span>
                        </label>
                        <div class="col-sm">
                            <input id="sdi" type="text" class="form-control s_website_form_input"
                                   name="sdi"/>
                        </div>
                    </div>
                </div>

                <div class="form-group col-12 s_website_form_field s_website_form_custom" data-type="char"
                     data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                               for="is_company">
                            <span class="s_website_form_label_content">is company?</span>
                        </label>
                        <div class="col-sm">
                            <input id="is_company" type="checkbox" class="form-control s_website_form_input"
                                   name="is_company"/>
                        </div>
                    </div>
                </div>
            </xpath>

            <xpath expr="//button[@type='submit']" position="replace">
                <div class="form-group col-12 s_website_form_submit" data-name="Submit Button">
                    <div style="width: 200px;" class="s_website_form_label"/>
                    <a href="#" role="button" class="btn btn-primary btn-lg s_website_form_send">Submit</a>
                    <span id="s_website_form_result"/>
                </div>
            </xpath>

        </template>
    </data>
</odoo>
